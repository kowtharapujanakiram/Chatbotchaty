import random

def chatbot_response(user_input):
    """
    A simple rule-based chatbot that gives responses 
    based on keywords in user input.
    """
    # Convert user input to lowercase for easy matching
    user_input = user_input.lower()
    
    # Greeting responses
    greetings = ["hello", "hi", "hey", "good morning", "good evening"]
    if any(word in user_input for word in greetings):
        return random.choice([
            "Hello! How can I help you today?",
            "Hi there! Whatâ€™s up?",
            "Hey! How are you doing?"
        ])
    
    # Asking about chatbot's name
    if "your name" in user_input:
        return "Iâ€™m chatpy, your Python chatbot assistant ğŸ¤–"
    
    # Asking about chatbot's age
    if "your age" in user_input:
        return "I was created recently, so I'm quite young in human years! ğŸ˜‰"
    
    # Asking about weather
    if "weather" in user_input:
        return "I canâ€™t see outside, but you can check a weather app ğŸŒ¤ï¸"
    
    if "pandu" in user_input:
        return "This is ur chatbot"
    
    # Farewell responses
    farewells = ["bye", "goodbye", "see you", "exit", "quit"]
    if any(word in user_input for word in farewells):
        return "Goodbye! Have a great day! ğŸ‘‹"
    
    # Default fallback response
    return "Iâ€™m not sure how to respond to that. Can you rephrase?"

if __name__ == "__main__":
    print("ğŸ¤– ChatPy: Hello! Iâ€™m your chatbot. Type 'bye' to quit.\n")
    
    while True:
        user_input = input("You: ")
        
        # Check exit condition
        if user_input.lower() in ["bye", "exit", "quit"]:
            print("ğŸ¤–chatpy: Goodbye! ğŸ‘‹")
            break
        
        # Get chatbot response
        response = chatbot_response(user_input)
        print("ğŸ¤–chatpy:", response)
